<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- XML配置文件包含对Mybatis系统核心设置 -->
<configuration>
	
	<properties resource="db.properties" />
	
	<!-- 指定Mybatis所用日志的具体实现 -->
	<settings>
		<setting name="logImpl" value="LOG4J" />
		
		<!-- 要延迟加载生效必须配置下面两个属性 -->
		<setting name="lazyLoadingEnabled" value="true"/>
		<setting name="aggressiveLazyLoading" value="false"/>
	</settings>
	<!-- 设置别名，configuration的标签放置 要按照一定的顺序 -->
	<!-- <typeAliases>
		<typeAlias type="mybatis.bean.User" alias="user"/>
	</typeAliases> -->
	
	<!-- 环境配置 ，即连接的数据库 -->
	<environments default="mysql">
		<environment id="mysql">
			<!-- 指定事务管理类型，type=“JDBC”指直接简单使用了JDBC的提交和回滚设置 -->
			<transactionManager type="JDBC" />
			<!-- dataSource 指数据源配置，POOLED是JDBC连接对象的数据源连接池的实现 -->
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/main/mapper/PersonMapper.xml"/>
		<mapper resource="com/main/mapper/CardMapper.xml"/>
		
		<mapper resource="com/main/mapper/ClazzMapper.xml"/>
		<mapper resource="com/main/mapper/StudentMapper.xml"/>
		
		<mapper resource="com/main/mapper/User3Mapper.xml"/>
		<mapper resource="com/main/mapper/OrderMapper.xml"/>
		<mapper resource="com/main/mapper/ArticleMapper.xml"/>
		
		<mapper resource="com/main/mapper/EmployeeMapper.xml"/>
	</mappers>
</configuration>